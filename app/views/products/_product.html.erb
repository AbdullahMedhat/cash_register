<div id="<%= dom_id product %>" class="product-item">
  <p>
    <strong>Product code:</strong>
    <%= product.product_code %>
  </p>

  <p>
    <strong>Name:</strong>
    <%= product.name %>
  </p>

  <p>
    <strong>Price:</strong>
    <%= product.price %>
  </p>

  <%= form_tag products_add_item_to_basket_path do %>
    <%= hidden_field_tag 'product_id', product.id  %>
    <%= hidden_field_tag 'order_id', @order.id  %>
    <%= number_field_tag 'quantity', 1, min: 1 %>

    <%= submit_tag "Add to basket", class: 'btn btn-primary' %>
  <% end %>
</div>
